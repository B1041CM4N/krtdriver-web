<div class="col-sm-6 col-md-4" id="<%= product.id.to_s %>">
  <div class="thumbnail">
    <% unless product.file_in_server == nil %>
      <%= image_tag(product.try(:file_in_server), height: 100, width: 100) %>
      <div class="caption">
        <h3><%= product.name[0..50] %></h3>
        <p><%= product.description[0..100] %></p>
        <p>
          <%= link_to "Editar", edit_product_url(product) %>
          <%= link_to "Eliminar", product_url(product), data: { confirm: "Está seguro?" }, method: :delete %>
        </p>
      </div><!-- caption -->
    </div><!-- thumbnail -->
    <% else %>
      <span>Producto Sin imagen</span>
      <div class="caption">
        <h3><%= product.name[0..50] %></h3>
        <p><%= product.description[0..100] %></p>
        <p>
          <%= link_to "Editar", edit_product_url(product) %>
          <%= link_to "Eliminar", product_url(product), data: { confirm: "Está seguro?" }, method: :delete %>
        </p>
      </div>
    <% end %>
  </div>
</div>