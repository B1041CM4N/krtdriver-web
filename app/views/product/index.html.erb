<% if @product && @product.errors.any? %>
  <%= render partial: "base/message_error", locals: {
        message: "No se puede guardar el producto debido a los siguientes errores:", model: @product
  } %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="pull-left">
      <h3>Productos (<%= @products.count.to_s %>)</h3> 
    </div>
    <div class="pull-right">
      <%= link_to "Crear Producto",  new_product_url, class: "btn btn-primary btn-md" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render partial: 'products', locals: {products: @products} %>
  </div>
</div>
<div class="col-md-6 col-md-offset-3 align-center">
  <%= paginate @products %>
</div>