<p id="notice"><%= notice %></p>

<section class="login">
  <h1 class="align-center wt">Iniciar Sesión</h1>
  <span>
    <p class="align-center wt">Bienvenid@ a KRT-Driver!</p>
  </span>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "wt", value: "Correo Electrónico" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "wt", value: "Contraseña" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.label :remember_me, class: "wt", value: "No volver a preguntar" %>
        <%= f.check_box :remember_me, class: "form-control" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Enviar", class: "btn btn-default btn-lg center-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
