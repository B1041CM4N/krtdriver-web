<section class="login">
  <h1 class="align-center wt">Iniciar Sesi칩n</h1>
  <span>
    <p class="align-center wt">Bienvenid@ a KRT-Driver!</p>
  </span>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p class="wt">
          <%= devise_error_messages! %>
          <span id="notice"><%= notice %></span>
          <span id="alert"><%= alert %></span>
          <% if @user && @user.errors.any? %>
            <%= render partial: "base/message_error",
            locals: { message: "No se puede guardar el producto debido a los siguientes errores:",
            model: @user } %>
          <% end %>
        </p>
      </div>
      <div class="form-group col-xs-12 col-md-6 col-md-offset-3", id="field_with_errors">
        <%= f.label :email, class: "wt", value: "Correo electr칩nico" %>
        <%= f.email_field :email, autofocus: true, class: "form-control field", required: true %>
      </div>

      <div class="form-group col-xs-12 col-md-6 col-md-offset-3">
        <%= f.label :password, class: "wt", value: "Contrase침a" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control field", required: true %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <div class="input-group">
            <%= f.check_box :remember_me%>
            <%= f.label :remember_me, class: "wt", value: "No cerrar sesi칩n" %>
          </div>
        </div>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Enviar", class: "btn btn-default btn-lg center-block", data: { disable_with: "Enviando..." } %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
