<h2 class="align-center">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group col-xs-12 col-md-6 col-md-offset-3">
        <%= f.label :email, "Correo Electrónico" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <hr>
      <!-- <div class="actions"> -->
        <div class="row">
          <%= f.submit "Enviar instrucciones", class: "btn btn-primary btn-md center-block" %>
        </div>
      <!-- </div> -->
    </div>
  </div>
<% end %>

