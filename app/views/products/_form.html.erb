<%= form_for :product, method: method, url: url do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nombre del producto" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, "DescripciÃ³n del producto" %>
    <%= f.text_area :description, class: 'form-control', min: 100, max: 1000 %>
  </div>
  <div class="form-group">
    <%= f.label :price, "Precio de venta" %>
    <%= f.number_field :price, class: 'form-control', min: 0, max: 99999 %>
  </div>
  <div class="form-group">
    <%= f.label :image, "Imagen del producto" %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'Crear', class: 'btn btn-primary btn-md' %>
    <%= link_to 'Volver', products_url, class: 'btn btn-default btn-md' %>
  </div>
<% end %>