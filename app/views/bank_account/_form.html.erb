<%= form_for :bank_account, method: method, url: url do |f| %>
  <div class="col-xs-12 col-md-6">
    <div class="form-group">
      <%= f.label :bank_id, "Seleccionar banco" %>
      <%= f.collection_select :bank_id, Bank.all.order(name: :asc), :id, :name, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :ta_id, "Seleccionar tipo de cuenta" %>
      <%= f.collection_select :ta_id, TypeAccount.all.order(name: :asc), :id, :name, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :account_number, "Ingresar nÃºmero de cuenta" %>
      <%= f.number_field :account_number, min: 1, max: 999999999, class: "form-control" %>
    </div>
    <%= f.submit "Enviar", class: "btn btn-primary btn-md" %>
  </div>
<% end %>