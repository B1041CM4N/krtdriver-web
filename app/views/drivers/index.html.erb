<div class="row">
  <div class="col-md-12">
    <div class="pull-left">
      <h3>Conductores</h3> 
    </div>
    <div class="pull-right">
      <%= link_to "Crear Conductor", new_driver_url, class: "btn btn-primary btn-md" %>
    </div>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <theader>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>RUT</th>
      <th>Nickname</th>
      <th>Teléfono</th>
      <th>Correo Electrónico</th>
      <th>Página Web</th>
      <th>Área servicio</th>
      <th></th>
    </theader>
    <tbody>
      <% @drivers.each do |driver| %>
        <tr>
          <td><%= driver.first_name.capitalize %></td>
          <td><%= driver.last_name.capitalize %></td>
          <td><%= driver.rut %></td>
          <td><%= driver.nickname.capitalize %></td>
          <td><%= driver.contact_number %></td>
          <td><%= driver.email %></td>
          <td><%= link_to driver.web.to_s, driver.web.to_s, target: "_blank", rel: "nofollow" %></td>
          <td><%= driver.sector.capitalize %></td>
          <td class="table-actions">
            <%= link_to "Editar", edit_driver_url(driver) %>
            <%= link_to "Eliminar", driver_url(driver), method: :delete, data: { confirm: "¿Está seguro?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-md-6 col-md-offset-3">
  <%= link_to "Volver", root_url, class: "btn btn-primary btn-md center-block" %>
</div>